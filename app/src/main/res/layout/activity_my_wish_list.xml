<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_myWishList_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="나의 소원"
        android:textSize="16dp"

        android:layout_marginTop="57dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_myWishList_left"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"

        tools:listitem="@layout/layout_wish_list_item"

        app:layout_constraintTop_toBottomOf="@+id/txt_myWishList_title"
        app:layout_constraintBottom_toTopOf="@+id/btn_myWishList_addWish"
        app:layout_constraintStart_toStartOf="@id/guide_myWishList_left"
        app:layout_constraintEnd_toEndOf="@id/guide_myWishList_right"
        />


    <Button
        android:id="@+id/btn_myWishList_addWish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="소원 적기"
        android:textSize="16dp"

        android:background="@drawable/default_round_10"

        android:layout_marginBottom="40dp"

        app:layout_constraintStart_toStartOf="@id/guide_myWishList_left"
        app:layout_constraintEnd_toEndOf="@id/guide_myWishList_right"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_myWishList_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_myWishList_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>